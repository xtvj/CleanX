<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/setting_theme">

        <ListPreference
            app:icon="@drawable/ic_night_mode"
            app:entries="@array/dark_model_entries"
            app:entryValues="@array/dark_model_values"
            app:key="themeMode"
            app:title="@string/dark_model"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/setting_list">

        <ListPreference
            app:icon="@drawable/ic_sort"
            app:entries="@array/app_list_entries"
            app:entryValues="@array/app_list_values"
            app:key="sortMode"
            app:title="@string/setting_sort_by"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/about">

        <Preference
            app:icon="@drawable/ic_version"
            app:key="version"
            app:title="@string/version_setting" />
        <Preference
            app:icon="@drawable/ic_source"
            app:summary="https://github.com/xtvj/CleanX"
            app:title="@string/project_address">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/xtvj/CleanX" />

        </Preference>

        <Preference
            app:icon="@drawable/ic_licenses"
            app:key="licenses"
            app:title="@string/third_party_licenses" />
    </PreferenceCategory>

</PreferenceScreen>