<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <PreferenceCategory
        app:title="主题"
        app:iconSpaceReserved="false">

        <ListPreference
            app:defaultValue="default"
            app:entries="@array/dark_model_entries"
            app:entryValues="@array/dark_model_values"
            app:key="themeMode"
            app:iconSpaceReserved="false"
            app:title="@string/dark_model"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="列表设置"
       app:iconSpaceReserved="false">

        <ListPreference
            app:defaultValue="id"
            app:entries="@array/app_list_entries"
            app:entryValues="@array/app_list_values"
            app:key="sortMode"
            app:iconSpaceReserved="false"
            app:title="排序方式"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


</PreferenceScreen>